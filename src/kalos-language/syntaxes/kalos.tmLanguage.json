{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Kalos",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#expression"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.kalos",
				"match": "\\b(if|while|for|return|loop|handle|var|const|import)\\b"
			}]
		},
		"expression": {
			"patterns": [{ "include": "#word" }, { "include": "#paren-expression" }, { "include": "#string" }]
		},
		"strings": {
			"name": "string.quoted.double.kalos",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.kalos",
					"match": "\\\\."
				}
			]
		},
		"punctuation": {
			"name": "punctuation.kalos",
			"match": "[{}\\.;]"
		},
		"paren-expression": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
			  "0": { "name": "punctuation.paren.open" }
			},
			"endCaptures": {
			  "0": { "name": "punctuation.paren.close" }
			},
			"name": "expression.group",
			"patterns": [{ "include": "#expression" }]
		},
		"word": {
			"name": "word.kalos",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]"
		}
	},
	"scopeName": "source.kalos"
}