fn go_stringify(args) {
}

on sys.main(args) {
    args = extract_args(args);
    if len(args) == 0 {
        help();
    }
    if (args[0] == "compile") {
        go_compile(tail(args));
    } else if (args[0] == "dispatch") {
        go_dispatch(tail(args));
    } else if (args[0] == "dump") {
        go_dump(tail(args));
    } else if (args[0] == "hexify") {
        go_hexify(tail(args));
    } else if (args[0] == "idl") {
        go_idl(tail(args));
    } else if (args[0] == "run") {
        go_run(tail(args));
    } else if (args[0] == "stringify") {
        go_stringify(tail(args));
    } else {
        help();
    }
}
